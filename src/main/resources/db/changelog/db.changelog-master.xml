<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="01" author="noranovak">
        <comment>Create employees and departments tables with foreign keys</comment>
        <createTable tableName="employees"
                     remarks="Employee data">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="full_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="position" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="department_id" type="bigint"/>
            <column name="created_at" type="timestamp" defaultValueDate="current_timestamp"/>
            <column name="created_by" type="bigint"/>
            <column name="modified_at" type="timestamp"/>
            <column name="modified_by" type="bigint"/>
        </createTable>

        <createTable tableName="departments" remarks="Department data">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="manager_id" type="bigint"/>
            <column name="created_at" type="timestamp" defaultValueDate="current_timestamp"/>
            <column name="created_by" type="bigint"/>
            <column name="modified_at" type="timestamp"/>
            <column name="modified_by" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="employees" baseColumnNames="department_id"
                                 constraintName="fk_employees_departments_department_id"
                                 referencedTableName="departments"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="departments" baseColumnNames="manager_id"
                                 constraintName="fk_departments_employees_manager_id"
                                 referencedTableName="employees"
                                 referencedColumnNames="id"/>

        <rollback>
            <dropAllForeignKeyConstraints baseTableName="employees"/>
            <dropAllForeignKeyConstraints baseTableName="departments"/>
            <dropTable tableName="departments"/>
            <dropTable tableName="employees"/>
        </rollback>
    </changeSet>

    <changeSet id="02" author="noranovak">
        <comment>Create roles table</comment>
        <createTable tableName="roles" remarks="Role data">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(20)"/>
        </createTable>

        <rollback>
            <dropTable tableName="roles"/>
        </rollback>
    </changeSet>

    <changeSet id="03" author="noranovak">
        <comment>Create connector table for employees and roles</comment>
        <createTable tableName="employees_roles">
            <column name="employee_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="employees_roles" baseColumnNames="employee_id"
                                 constraintName="fk_employees_roles_employees" referencedTableName="employees"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="employees_roles" baseColumnNames="role_id"
                                 constraintName="fk_employees_roles_roles" referencedTableName="roles"
                                 referencedColumnNames="id"/>

        <rollback>
            <dropAllForeignKeyConstraints baseTableName="employees_roles"/>
            <dropTable tableName="employees_roles"/>
        </rollback>
    </changeSet>

